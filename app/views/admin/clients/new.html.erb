<%= my_page_title "Edit personal details" %>
<div class="edit-client">
  <fieldset>
    <% formatted_form_for [:admin, @client] do |f| %>
    <%= f.error_messages %>
   <div class="row">
      <%= f.text_field :email %>
    </div>
    <div class="row">
      <%= f.password_field :password %>
    </div>
    <div class="row">
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="row">
      <%= f.text_field :firstname %>
    </div>
    <div class="row">
      <%= f.text_field :lastname %>
    </div>
    <div class="row">
      <%= f.text_field :telephone %>
    </div>
    <div class="row">
      <%= f.text_field :company_name, :label => "Company Name" %>
    </div>
    <p><%= f.submit "Register" %></p>
    <% end %>
  </fieldset>
</div>
