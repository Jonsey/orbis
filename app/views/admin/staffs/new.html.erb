<% my_page_title "New Staff member registration" %>
<div class="create-new-staff">
  <fieldset>
    <% formatted_form_for [:admin, @staff] do |f| %>
    <%= f.error_messages %>
    <div class="row">
      <%= f.text_field :email %>
    </div>
    <div class="row">
      <%= f.password_field :password %>
    </div>
    <div class="row">
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="row">
      <%= f.text_field :firstname %>
    </div>
    <div class="row">
      <%= f.text_field :lastname %>
    </div>
    <div class="row">
      <%= f.text_field :telephone %>
    </div>
    <p><%= f.submit "Register" %></p>
    <% end %>
  </fieldset>
</div>
