<%= f.error_messages %>
<div class="row">
  <%= f.text_field :role, :class => "text", :wrapper_class => "cell" %>
  <%= f.select :category_id, Category.all.collect{|p| [ p.name, p.id ] }, { :include_blank => true, :wrapper_class => "cell"} %>
</div>
<div class="row">
  <%= f.text_field :salary, :class => "text", :wrapper_class => "cell" %>
  <%= f.text_field :location, :class => "text", :wrapper_class => "cell" %>
</div>
<% unless (@vacancy.status == "draft" || @vacancy.new_record? ) %>
<div class="row">
  <%= f.select :staff_id, Staff.all.collect{|p| [ p.to_s, p.id ] }, { :include_blank => true, :wrapper_class => "cell"}, :label => "Staff contact" %>
</div>
<% end %>
<div class="row">
  <%= f.text_area :role_description, :wrapper_class => "cell" %>
</div>
