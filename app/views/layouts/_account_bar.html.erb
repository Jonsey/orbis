  <div id='account_bar'>
    <ul>
      <% unless current_user %>
      <li><%= link_to 'Login', login_path %></li>
      <% else %>
      <li><a><%= current_user.login %></a></li>
      <li><%= link_to("My Account", edit_admin_user_path(current_user)) %></li>
      <li><%= link_to 'Logout', logout_path %></li>
      <% end %>
    </ul>
  </div>
